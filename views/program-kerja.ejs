<!DOCTYPE html>
<html lang="id">
<head>
  <meta charset="UTF-8">
  <title>Program Kerja</title>
  <link rel="stylesheet" href="/bootstrap/css/bootstrap.min.css">
</head>
<body>

<div class="container my-5">
  <h1 class="text-center fw-bold mb-4">Program Kerja</h1>

  <div class="row g-4">
    <% prokers.forEach(proker => { %>
      <div class="col-md-6 col-lg-4">
        <div class="card h-100 shadow-sm">

          <%
            const gambarUtama = Array.isArray(proker.gambar) &&
              proker.gambar.length > 0
              ? proker.gambar[0]
              : null;
          %>

          <% if (gambarUtama) { %>
            <img
              src="<%= STRAPI_URL + (gambarUtama.formats?.small?.url || gambarUtama.url) %>"
              class="card-img-top"
              style="height:200px; object-fit:cover;"
            >
          <% } %>

          <div class="card-body d-flex flex-column">
            <h5 class="card-title fw-semibold"><%= proker.nama %></h5>
            <p class="text-muted small"><%= proker.tanggal %></p>

            <a href="/program-kerja/<%= proker.slug %>"
               class="btn btn-primary mt-auto">
              Detail
            </a>
          </div>

        </div>
      </div>
    <% }) %>
  </div>
</div>

<script src="/bootstrap/js/bootstrap.bundle.min.js"></script>
</body>
</html>
