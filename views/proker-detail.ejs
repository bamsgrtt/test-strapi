<!DOCTYPE html>
<html lang="id">
<head>
  <meta charset="UTF-8">
  <title><%= proker.nama %></title>
  <link rel="stylesheet" href="/bootstrap/css/bootstrap.min.css">
</head>
<body>

<div class="container my-5">

  <a href="/program-kerja" class="btn btn-primary mb-4">
    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-left" viewBox="0 0 16 16">
  <path fill-rule="evenodd" d="M15 8a.5.5 0 0 0-.5-.5H2.707l3.147-3.146a.5.5 0 1 0-.708-.708l-4 4a.5.5 0 0 0 0 .708l4 4a.5.5 0 0 0 .708-.708L2.707 8.5H14.5A.5.5 0 0 0 15 8"/>
    </svg> 
    Kembali
  </a>

  <h1><%= proker.nama %></h1>
  <p class="text-muted">Tanggal: <%= proker.tanggal %></p>

  <hr>

  <!-- DESKRIPSI -->
  <div class="container my-4">
    <div class="row">

      <div class=" col-12 border mb-5 rounded-4">
        <% if (Array.isArray(proker.deskripsi)) { %>
          <% proker.deskripsi.forEach(block => { %>
            <% if (block.type === 'paragraph') { %>
              <p class="m-4"><%= block.children.map(c => c.text).join('') %></p>
              <% } %>
              <% }) %>
              <% } %>
            </div>
    </div>
  </div>

  <!-- GALERI -->
<!-- GALERI -->
<div class="container my-4">
  <h3 class="fw-semibold">Dokumentasi</h3>

  <div class="row g-3">

    <% if (proker.gambar && proker.gambar.length > 0) { %>
      <% proker.gambar.forEach(img => { %>

        <div class="col-6 col-md-3">
          <div class="card shadow-sm">

            <% if (img.mime && img.mime.startsWith('image')) { %>
              <!-- GAMBAR -->
              <img 
                src="<%= STRAPI_URL + (img.formats?.small?.url || img.url) %>" 
                class="card-img-top"
                style="height:200px; object-fit:cover;"
                alt="<%= img.name %>"
              >
            <% } %>

            <% if (img.mime && img.mime.startsWith('video')) { %>
              <!-- VIDEO -->
              <video
                controls
                class="w-100"
                style="height:200px; object-fit:cover;"
              >
                <source
                  src="<%= STRAPI_URL + img.url %>"
                  type="<%= img.mime %>"
                >
                Browser tidak mendukung video.
              </video>
            <% } %>

          </div>
        </div>

      <% }) %>
    <% } else { %>
      <p class="text-muted">Tidak ada dokumentasi</p>
    <% } %>

  </div>
</div>


</div>

<script src="/bootstrap/js/bootstrap.bundle.min.js"></script>
</body>
</html>
